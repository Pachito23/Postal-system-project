<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControllerRegister">
    <children>
        <Button layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#gotoMainMenu" text="Back to Main Menu" />
        <Label layoutX="140.0" layoutY="31.0" text="Register as a Customer">
            <font>
                <Font size="32.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="227.0" layoutY="93.0" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="227.0" layoutY="132.0" promptText="Password" />
        <TextField fx:id="fullNameField" layoutX="227.0" layoutY="175.0" promptText="Full Name" />
        <TextField fx:id="phoneNumberField" layoutX="227.0" layoutY="217.0" promptText="Phone Number" />
        <TextArea fx:id="addressField" layoutX="226.0" layoutY="258.0" prefHeight="87.0" prefWidth="149.0" promptText="Address" />
        <Button layoutX="270.0" layoutY="361.0" mnemonicParsing="false" onAction="#registerCustomer" text="Register" />
        <Label fx:id="message" layoutX="408.0" layoutY="91.0" prefHeight="133.0" prefWidth="149.0" textAlignment="CENTER" wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
